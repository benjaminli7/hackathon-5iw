generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  phoneNumber String     @unique
  email       String?    @unique
  name        String?
  responses   Response[]
  messages    Message[]
  age         Int?
  isEstimated Boolean    @default(false)
}

model Questionnaire {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  questions   Question[]
}

model Question {
  id              Int           @id @default(autoincrement())
  text            String
  questionnaireId Int
  choices         Choice[]
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id])
}

model Choice {
  id         Int        @id @default(autoincrement())
  text       String
  questionId Int
  question   Question   @relation(fields: [questionId], references: [id])
  responses  Response[]
}

model Response {
  id       Int    @id @default(autoincrement())
  userId   Int
  choiceId Int
  choice   Choice @relation(fields: [choiceId], references: [id])
  user     User   @relation(fields: [userId], references: [id])
}

model Message {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  sender    String
  content   String
  contentIA String
  timestamp DateTime @default(now())
}

model ConversationScript {
  id        Int    @id @default(autoincrement())
  operation String
  order     Int
  content   String
}
